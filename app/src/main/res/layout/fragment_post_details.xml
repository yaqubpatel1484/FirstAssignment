<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/postDetails_ivPoster"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        tools:ignore="VectorDrawableCompat"
        android:contentDescription="NONE" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/view1_enquiryFormView" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/txt6_SideHeadingStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Id" />

        <TextView
            style="@style/txt7_enquiryFormTextView"
            android:id="@+id/postDetails_tvId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/view1_enquiryFormView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/txt6_SideHeadingStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Title" />

        <TextView
            style="@style/txt7_enquiryFormTextView"
            android:id="@+id/postDetails_tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/view1_enquiryFormView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/txt6_SideHeadingStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Author" />

        <TextView
            style="@style/txt7_enquiryFormTextView"
            android:id="@+id/postDetails_tvAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/view1_enquiryFormView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/txt6_SideHeadingStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Body" />

        <TextView
            style="@style/txt7_enquiryFormTextView"
            android:id="@+id/postDetails_tvBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/view1_enquiryFormView" />

</LinearLayout>